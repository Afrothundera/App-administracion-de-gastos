<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".intro.IntroActivity"
        android:background="#fff">

    <com.google.android.material.button.MaterialButton
            android:text="Get Started"
            android:layout_width="132dp"
            android:layout_height="wrap_content"
            android:id="@+id/bntStart"
            android:textColor="@android:color/white"
            android:background="@drawable/btn_gradient"
            android:visibility="invisible"
            app:rippleColor="#fff"
            app:cornerRadius="9dp"
            android:layout_margin="32dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="80dp"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"/>

    <androidx.viewpager.widget.ViewPager
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@+id/tabIntro"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="8dp" android:id="@+id/pagerIntro"/>

    <com.google.android.material.button.MaterialButton
            android:text="Next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bntNext"
            android:drawableTint="@color/gradientStart"
            android:textColor="@color/gradientStart"
            android:background="#fff"
            android:drawableRight="@drawable/ic_arrow_forward_black_24dp"
            app:backgroundTint="@android:color/white"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:rippleColor="@android:color/white"
            app:cornerRadius="9dp"
            app:layout_constraintBottom_toBottomOf="parent"/>

    <com.google.android.material.tabs.TabLayout

            android:id="@+id/tabIntro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:tabBackground="@drawable/indicator_selector"
            app:tabIndicator="@drawable/indicator_selector">


    </com.google.android.material.tabs.TabLayout>


</androidx.constraintlayout.widget.ConstraintLayout>